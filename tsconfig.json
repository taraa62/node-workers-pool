{
  "include": ["./**/*"],
  "exclude": ["node_modules", "**/*.test.ts"],
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2018",
//    "rootDir": "./",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": false,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "newLine": "lf",
    "noUnusedLocals": true,
    "preserveWatchOutput": true
  }
}
